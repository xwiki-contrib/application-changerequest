#template('changerequest/macros.vm')

#macro(displayCRNotificationRightCell $compositeEvent)
    ###
    ### Link to the Page
    ###
    #displayCRNotificationPage($compositeEvent)
    ###
    ### Description, users and date
    ###
    #displayNotificationDescription($compositeEvent)
    #displayNotificationDate($compositeEvent)
    ###
    ### Details
    ###
    #if ($event.events.size() > 1)
        #displayNotificationDetails($event)
    #end
#end

#macro(displayCRNotificationDetails $event)
    #if ("$!services.notification.preferences.getDiffType($emailUser)" != 'NOTHING')
    <table width="100%" style="margin: 5px 0; font-size: 0.8em; border-top: 1px dashed #e8e8e8">
        #foreach ($ev in $event.events)
            #_getCRDocument($event $document)
            #set ($diffUrl = $xwiki.getURL($ev.document, 'view', "viewer=changes&rev2=${ev.documentVersion}"))
            #set ($description = $services.localization.render("changerequest.notifications.filechange.added.description", ["$document.displayTitle"]))
            #if ("$!description" == '')
                #set ($description = $ev.type)
            #end
            <tr style="vertical-align: top;">
                <td width="33%" style="overflow: hidden;">#displayEmailNotificationEventUser($ev.user)</td>
                <td width="45%">$escapetool.xml($description)</td>
                <td>
                    #if ($diffUrl!='')
                        #link($diffUrl, $escapetool.xml($xwiki.formatDate($ev.date)))
                    #else
                        $escapetool.xml($xwiki.formatDate($ev.date))
                    #end
                </td>
            </tr>
        #end
    </table>
    #end
#end

#macro(displayCRNotificationPage $event)
    #_getCREventModifiedDocument($event)
<div>
    <div style="background-color: #f5f5f5; color: #777777; padding: 4px 8px; border-radius: 7px; font-size: 8px;">
        #template('hierarchy_macros.vm')
      #hierarchy($modifiedDocument.documentReference, {'id': 'hierarchy', 'limit': 5, 'treeNavigation': false, 'plain': true})
    </div>
    ## See `#displayNotificationEvent()` in `templates/notification/macros.vm` to understand why we don't use escape
    ## tools to display the title.
    #link($modifiedDocument.getURL(), $modifiedDocument.displayTitle)
</div>
#end

#displayNotificationSkeleton("#displayNotificationLeftCell($event)", "#displayCRNotificationRightCell($event)")