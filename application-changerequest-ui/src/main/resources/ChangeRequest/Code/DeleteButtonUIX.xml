    <property>
      <code>require(['jquery', 'xwiki-meta', 'SaveChangeRequestModal'], function ($, xm, SaveChangeRequestModal) {
  var saveConfig = JSON.parse($('#changerequest-delete-config').text());
  var attachButtons = function () {
    if ($('#delete_changerequest').length == 0) {
      var button = $("&lt;input&gt;", {
        'type': 'button',
        'class': 'btn btn-warning',
        'name': 'delete_changerequest',
        'id': 'delete_changerequest',
        'value': saveConfig.deleteButtonTranslation,
        'title': saveConfig.deleteButtonTranslation
      });
      $(button).insertBefore('.xcontent form &gt; button.btn-danger.confirm');
      
      if ($('#affectChildren')) {
        var nestedAlert = $("&lt;div&gt;", {
          'class': 'alert alert-info',
          'role': 'alert',
          'id': 'nestedPageAlert'
        });
        nestedAlert.text(saveConfig.nestedPagesMessage);
        $(nestedAlert).insertBefore($('#panel-children').parent());
      }
    }
    $('#delete_changerequest').on('click', function(e) {
      var saveChangeRequestModal = new SaveChangeRequestModal('changerequest-delete-config');
      e.preventDefault();
      saveChangeRequestModal.openModal();
    });
    $('#affectChildren').on('change', function (e) {
      var deleteButton = $('#delete_changerequest');
      var isChecked = $(this).is(':checked');
      deleteButton.attr('disabled', isChecked);
      if (isChecked) {
        deleteButton.attr('title', saveConfig.disabledDeleteButtonTranslation);
      } else {
        deleteButton.attr('title', saveConfig.deleteButtonTranslation);
      }
    });
  }
  attachButtons();
});</code>
